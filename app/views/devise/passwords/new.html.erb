<center>
  <div class="container">
    
    <h2>Entrar</h2>
      <div class="col-md-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="field">
              <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
            </div>

            <div class="actions mt-3">
              <%= f.submit "Enviar", class: 'btn btn-lg btn-outline-primary btn-block' %>
            </div>
          </div>
        <% end %>
          <%= render "devise/shared/links" %>
      </div>


    </div>
  </div>
</center>