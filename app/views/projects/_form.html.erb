<%= simple_form_for @project do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :title %>
  </div>

  <div class="field">
    <%= form.input :description, as: :text %>
  </div>

  <div class="field">
    <%= form.input :goal, as: :float %>
  </div>

  <div class="field">
    <%= form.input :start_date, as: :date %>
  </div>

  <div class="field">
    <%= form.input :image, as: :file, multiple: true, direct_upload: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
